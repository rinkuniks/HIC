<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

    <LinearLayout
            android:layout_width="match_parent"
            android:gravity="left"
            android:padding="10dp"
            android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
                android:id="@+id/card_view_dash_adaptor"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/card_view_back_dash_board"
                android:elevation="11dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="10dp"
                tools:targetApi="lollipop">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:id="@+id/text_view_dash_board"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/card_view_dash_adaptor"
                        android:layout_marginBottom="9dp"
                        android:layout_marginTop="9dp"
                        android:paddingStart="10dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/blackcolor"
                        android:textSize="22sp"
                        tools:text="My Hostels"
                        tools:ignore="NotSibling"/>

                <TextView
                        android:id="@+id/text_view_number_dash_board"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/redcolor"
                        android:textSize="22sp"
                        android:layout_marginTop="65dp"
                        tools:text="5"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="19dp"/>

                <ImageView
                        android:id="@+id/image_view_dash_board"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:contentDescription="@null"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:src="@drawable/hostel_svg"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>



</RelativeLayout>