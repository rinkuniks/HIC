<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.SignUpActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:orientation="vertical">


        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="50dp"
                android:src="@drawable/logohic"
                android:layout_weight="1.3"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/illustration"
                android:layout_weight="1.3"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="UselessParent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" android:layout_marginTop="0dp" android:layout_marginStart="0dp">
        <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_weight="2"-->
        <!--android:background="#FFF">-->
        <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_marginBottom="40dp"-->
        <!--android:layout_marginTop="40dp"-->
        <!--android:layout_marginStart="40dp"-->
        <!--android:layout_marginEnd="40dp"-->
        <!--android:contentDescription="@string/todo"/>-->

        <!--</LinearLayout>-->

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1">


            <RelativeLayout
                    android:id="@+id/linear_layout_request_id"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:paddingStart="10dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/image_verified"
                        android:layout_width="25dp"
                        android:layout_centerVertical="true"
                        android:layout_height="25dp"
                        android:src="@drawable/email_"
                        android:contentDescription="@string/todo"/>

                <EditText
                        android:id="@+id/input_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:layout_toEndOf="@+id/image_verified"
                        android:layout_marginStart="20dp"
                        android:inputType="text"
                        android:textSize="22sp"
                        android:background="@null"
                        android:layout_marginBottom="5dp"
                        android:hint="Name"/>

            </RelativeLayout>
            <View
                    android:id="@+id/view_1"
                    android:layout_below="@+id/linear_layout_request_id"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#FF0000"/>

            <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/view_1"
                    android:id="@+id/linear_layout_request_id_2"
                    android:layout_width="match_parent"
                    android:paddingStart="10dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <ImageView
                        android:id="@+id/image_2"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/mobile"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/todo"/>

                <EditText
                        android:id="@+id/input_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_toEndOf="@+id/image_2"
                        android:layout_marginStart="20dp"
                        android:textColor="#000000"
                        android:inputType="number"
                        android:maxLength="10"
                        android:background="@null"
                        android:layout_marginBottom="5dp"
                        android:textSize="22sp"
                        android:hint="@string/mobile"/>

            </RelativeLayout>
            <View
                    android:layout_below="@+id/linear_layout_request_id_2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#FF0000"/>

            <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/linear_layout_request_id_2"
                    android:id="@+id/linear_layout_request_id_3"
                    android:layout_width="match_parent"
                    android:paddingStart="10dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <ImageView
                        android:id="@+id/image_3"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/lock"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/todo"/>

                <EditText
                        android:id="@+id/input_password_"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_toEndOf="@+id/image_3"
                        android:layout_marginStart="20dp"
                        android:textColor="#000000"
                        android:inputType="textPassword"
                        android:background="@null"
                        android:layout_marginBottom="5dp"
                        android:textSize="22sp"
                        android:hint="@string/password"/>

            </RelativeLayout>


            <View
                    android:layout_below="@+id/linear_layout_request_id_3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/view3"
                    android:background="#FF0000"/>


            <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/linear_layout_request_id_3"
                    android:id="@+id/linear_layout_request_id_4"
                    android:layout_width="match_parent"
                    android:paddingStart="10dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <ImageView
                        android:id="@+id/image_4"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/lock"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/todo"/>

                <EditText
                        android:id="@+id/input_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_toEndOf="@+id/image_4"
                        android:layout_marginStart="20dp"
                        android:textColor="#000000"
                        android:inputType="text"
                        android:background="@null"
                        android:layout_marginBottom="5dp"
                        android:textSize="22sp"
                        android:hint="@string/city"/>

            </RelativeLayout>
            <View
                    android:layout_below="@+id/linear_layout_request_id_4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/view4"
                    android:background="#FF0000"/>

            <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/linear_layout_request_id_4"
                    android:id="@+id/linear_layout_request_id_5"
                    android:layout_width="match_parent"
                    android:paddingStart="10dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <ImageView
                        android:id="@+id/image_5"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/lock"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/todo"/>

                <EditText
                        android:id="@+id/input_hostel_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_toEndOf="@+id/image_5"
                        android:layout_marginStart="20dp"
                        android:textColor="#000000"
                        android:inputType="number"
                        android:maxLength="3"
                        android:background="@null"
                        android:layout_marginBottom="5dp"
                        android:textSize="22sp"
                        android:hint="@string/hostelnumber"/>

            </RelativeLayout>
            <View
                    android:layout_below="@+id/linear_layout_request_id_5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/view5"
                    android:background="#FF0000"/>

            <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/view5"
                    android:id="@+id/checkboxAgree"
                    android:layout_marginTop="20dp"
                    android:text="Agree To The Terms And Condition"
            />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_signin"
                    android:layout_alignParentStart="true"
                    android:text="@string/signup"
                    android:id="@+id/signup"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/checkboxAgree"
                    android:textStyle="bold"
                    android:textColor="#FFF"
            />

            <TextView
                    android:layout_width="match_parent"
                    android:text="Login"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:id="@+id/loginSignupActivity"
                    android:textColor="@color/redcolor"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/signup"
                    android:layout_marginTop="20dp"
            />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>