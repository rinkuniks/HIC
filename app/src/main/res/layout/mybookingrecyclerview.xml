<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:text="Name"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:layout_height="wrap_content"/>
        <View
                android:layout_width="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="35dp"
                android:background="@color/redcolor"
                android:layout_height="1dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:text="Seshu Kusam"
                android:id="@+id/bookingName"
                android:layout_marginStart="10dp"
                android:layout_marginTop="35dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_width="wrap_content"
                android:text="Hostel"
                android:layout_marginStart="10dp"
                android:layout_marginTop="70dp"
                android:textSize="18sp"
                android:layout_height="wrap_content"/>

        <View
                android:layout_width="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="95dp"
                android:background="@color/redcolor"
                android:layout_height="1dp"/>

        <TextView
                android:layout_width="200dp"
                android:text="Sri Sai Hostel For Men"
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/bookingHostelName"
                android:layout_marginStart="10dp"
                android:layout_marginTop="100dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_width="wrap_content"
                android:text="Paid"
                android:layout_marginStart="10dp"
                android:layout_marginTop="130dp"
                android:textSize="18sp"
                android:layout_height="wrap_content"/>

        <View
                android:layout_width="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="155dp"
                android:background="@color/redcolor"
                android:layout_height="1dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:text="Rs 1000"
                android:id="@+id/bookingPaidAmount"
                android:layout_marginStart="10dp"
                android:layout_marginTop="160dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_width="wrap_content"
                android:text="Mobile"
                android:layout_marginStart="250dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:layout_height="wrap_content"/>

        <View
                android:layout_width="20dp"
                android:layout_marginStart="250dp"
                android:layout_marginTop="35dp"
                android:background="@color/redcolor"
                android:layout_height="1dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:text="9876543210"
                android:id="@+id/bookingMobile"
                android:layout_marginStart="250dp"
                android:layout_marginTop="35dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_width="wrap_content"
                android:text="Sharing"
                android:layout_marginStart="250dp"
                android:layout_marginTop="70dp"
                android:textSize="18sp"
                android:layout_height="wrap_content"/>

        <View
                android:layout_width="20dp"
                android:layout_marginStart="250dp"
                android:layout_marginTop="95dp"
                android:background="@color/redcolor"
                android:layout_height="1dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:text="3"
                android:id="@+id/bookingSharing"
                android:layout_marginStart="250dp"
                android:layout_marginTop="100dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_width="wrap_content"
                android:text="Balance"
                android:layout_marginStart="250dp"
                android:layout_marginTop="130dp"
                android:textSize="18sp"
                android:layout_height="wrap_content"/>

        <View
                android:layout_width="20dp"
                android:layout_marginStart="250dp"
                android:layout_marginTop="155dp"
                android:background="@color/redcolor"
                android:layout_height="1dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:text="Rs 4000"
                android:id="@+id/bookingBalanceAmount"
                android:layout_marginStart="250dp"
                android:layout_marginTop="160dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginTop="200dp"
                android:text="Cancel"
                android:id="@+id/bookingCancel"
                android:textColor="@color/whitecolor"
                android:textSize="20sp"
                android:padding="10dp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:background="@drawable/buttonbooking"
                android:layout_height="wrap_content"/>

    </android.support.v7.widget.CardView>

</RelativeLayout>